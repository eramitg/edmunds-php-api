{
  "name": "Edmunds.com HTTP API - Editorials",
  "baseUrl": "http://api.edmunds.com",
  "operations": {
    "abstractService": {
      "httpMethod": "GET",
      "parameters": {
        "api_key": {
          "location": "query",
          "description": "API key",
          "required": true
        },
        "fmt": {
          "location": "query",
          "required": true
        }
      }
    },
    "getContent": {
      "extends": "abstractService",
      "uri": "/v1/content",
      "responseClass": "contentHolderModel",
      "summary": "Return a filtered list of editorials",
      "parameters": {
        "category": {
          "location": "query",
          "required": false
        },
        "make": {
          "location": "query",
          "required": false
        },
        "model": {
          "location": "query",
          "required": false
        },
        "year": {
          "location": "query",
          "required": false
        },
        "limit": {
          "location": "query",
          "required": false
        },
        "pagenum": {
          "required": false,
          "location": "query"
        },
        "pagesize": {
          "required": false,
          "location": "query"
        }
      }
    },
    "getReviewByMakeModelYear": {
      "extends": "abstractService",
      "uri": "/v1/content/editorreviews",
      "responseClass": "editorReviewModel",
      "summary": "Returns an editor review",
      "parameters": {
        "make": {
          "location": "query",
          "required": true
        },
        "model": {
          "location": "query",
          "required": true
        },
        "year": {
          "location": "query",
          "required": true
        }
      }
    }
  },
  "models": {
    "contentHolderModel": {
      "type": "array",
      "location": "json",
      "items": {
        "$ref": "Content"
      }
    },
    "editorReviewModel": {
      "type": "object",
      "location": "json",
      "properties": {
        "editorial": {
          "$ref": "EditorReview"
        }
      }
    },
    "Content": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "category": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "published": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    },
    "EditorReview": {
      "type": "object",
      "location": "json",
      "properties": {
        "con": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "interior": {
          "type": "string"
        },
        "legacy-id": {
          "type": "number"
        },
        "metaKeywords": {
          "type": "string"
        },
        "metaDescription": {
          "type": "string"
        },
        "driving": {
          "type": "string"
        },
        "whatsNew": {
          "type": "string"
        },
        "videoReview": {
          "type": "string"
        },
        "powertrain": {
          "type": "string"
        },
        "fvEdmundsSays": {
          "type": "string"
        },
        "safety": {
          "type": "string"
        },
        "pro": {
          "type": "string"
        },
        "edmundsSays": {
          "type": "string"
        },
        "introduction": {
          "type": "string"
        },
        "review": {
          "type": "string"
        }
      }
    }
  }
}
